@model Pub_Mangement.Models.MenuItem
@{
    ViewData["Title"] = "Item Details";
}
<h2>@Model.Name</h2>
<hr />
<dl class="row">
    <dt class="col-sm-3">Price</dt>
    <dd class="col-sm-9">@Model.Price.ToString("0.00")</dd>

    <dt class="col-sm-3">Category</dt>
    <dd class="col-sm-9">@Model.Category</dd>
</dl>
<div class="d-flex gap-2">
    <a asp-action="Edit" asp-route-id="@Model.MenuItemId" class="btn btn-primary">Edit</a>
    <a asp-action="Index" class="btn btn-outline-secondary">Back</a>
</div>

